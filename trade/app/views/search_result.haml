%h2 Search result

-unless @all_items.empty?
  -unless page ==1
    %a(href = "/search/result/#{page-1}") previous
  -for i in 1..page_count
    -if page!=i
      %a(href = "/search/result/#{i}") #{i}
    -else
      #{i}
  -unless page == page_count
    %a(href = "/search/result/#{page+1}") next
  -stored = @all_items
  %table.itemtable
    %thead
      %tr
        %td
          %p.table_header Name
        %td
          %p.table_header Picture
        %td
          %p.table_header Price
        %td
          %p.table_header Qty
        %td
          %p.table_header Seller
        %td
          %p.table_header Buy
    - for item in stored
      %tr(title = "#{item.description}")
        %td.nopadding
          %a.wholly_clickable(href="/item/#{item.id}" )
            :escaped
              #{item.name}
        %td
          %a(href="/item/#{item.id}/image" rel="lightbox" title="#{item.name}")
            %img(src="/item/#{item.id}/image" class = "smallpicturebox")
        %td
          %p #{item.price}
        %td
          %p #{item.quantity}
        %td
          %a(href="/users/#{item.owner.id}" )
            :escaped
              #{item.owner.name}
        %td.buyform
          -unless item.owner.id == session[:id]
            %form.nomargin(action="/buy/#{item.id}/#{(stored.select {|tobuy| tobuy.id==item.id})[0].timestamp}" method="POST")
              %input.tiny(type = "text" name = "quantity" value = "1")
              %input.square.rightalign(type="submit" value="Buy")
-else
  %h3 No items
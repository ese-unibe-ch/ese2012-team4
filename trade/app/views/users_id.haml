%br
.textbox.name
  -# MW: Formatierung geht kaputt beim Einf√ºgen von ":escaped"
  :escaped
    #{user.name}'s interests:
.textbox.value
  -if !user.description.empty?
    -user.description.each do |line|
      :escaped
        #{line}
    %br
%br
%hr.separator

.textbox.name
  %p
  :escaped
    #{user.name}'s items on sale:
%br
- content_for :name do
  %p
    :escaped
      #{user.name}'s Active_items
-unless active_items.empty?
  -stored = active_items
  %table.itemtable.right
    %thead
      %tr
        %td
          %p.table_header Name
        %td
          %p.table_header Price
        %td
          %p.table_header Buy
    - for item in active_items
      %tr
        %td
          %p
            :escaped
              #{item.name}
        %td
          %p
          :escaped
            #{item.price}
        %td
          %form.nomargin(action="/buy/#{item.id}/#{(stored.select {|tobuy| tobuy.id==item.id})[0].timestamp}" method="POST")
            %input.square(type="submit" value="Buy")
-else
  .textbox.value
    %p No Items
-unless user.name != session_user.name
  %hr.separator
  .textbox.value
    %form.nomargin(action="/profile" method="GET")
      %input.square(type="submit" value="Edit your profile")

%br
.textbox.name
  #{user.name}'s interests:
.textbox.value
  -user.description.each do |line|
    #{line}
    %br
%br
%hr.separator

.textbox.name
  %p #{user.name}'s items on sale:
%br
- content_for :name do
  %p #{user.name}'s Active_items
-unless active_items.empty?
  -stored = active_items
  %table.itemtable.right
    %thead
      %tr
        %td
          %p.table_header Name
        %td
          %p.table_header Price
        %td
          %p.table_header Qty
        %td
          %p.table_header Buy
    - for item in active_items
      %tr
        %td
          %a(href="/item/#{item.id}" ) #{item.name}
        %td
          %p #{item.price}
        %td
          %p #{item.quantity}
        %td
          %form.nomargin(action="/buy/#{item.id}/#{(stored.select {|tobuy| tobuy.id==item.id})[0].timestamp}" method="POST")
            %input.tiny(type = "text" name = "quantity" value = "1")
            %input.square(type="submit" value="Buy")
-else
  .textbox.value
    %p No Items
-unless user.name != session_user.name
  %hr.separator
  .textbox.value
    %form.nomargin(action="/profile" method="GET")
      %input.square(type="submit" value="Edit your profile")

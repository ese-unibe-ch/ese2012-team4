
%h2 My Active Items
-unless @session_user.list_items.empty?
  %table.itemtable
    %thead
      %tr
        %td
          %p.table_header Name
        %td
          %p.table_header Picture
        %td
          %p.table_header Price
        %td
          %p.table_header Qty
        %td
          %p.table_header Deactivate
    - for item in @session_user.list_items
      %tr
        %td.nopadding
          %a.wholly_clickable(href="/item/#{item.id}" )
            :escaped
              #{item.name}
        %td
          %a(href="/item/#{item.id}/image" rel="lightbox" title="#{item.name}")
            %img(src="/item/#{item.id}/image" class = "smallpicturebox")
        %td
          %p #{item.price}
        %td
          %p #{item.quantity}
        %td
          %form.nomargin(action="/changestate/#{item.id}/setinactive" method="POST")
            %input.square(type="submit" value="Set inactive")
-else
  %h3 No items

%h2 My Inactive Items

-unless @session_user.list_items_inactive.empty?
  %table.itemtable
    %thead
      %tr
        %td
          %p.table_header Name
        %td
          %p.table_header Picture
        %td
          %p.table_header Price
        %td
          %p.table_header Qty
        %td
          %p.table_header Activate
        %td
          %p.table_header Edit
    - for item in @session_user.list_items_inactive
      %tr
        %td.nopadding
          %a.wholly_clickable(href="/item/#{item.id}" )
            :escaped
              #{item.name}
        %td
          %a(href="/item/#{item.id}/image" rel="lightbox[inactive]" title="#{item.name}")
            %img(src="/item/#{item.id}/image" class = "smallpicturebox")
        %td
          %p #{item.price}
        %td
          %p #{item.quantity}
        %td
          %form.nomargin(action="/changestate/#{item.id}/setactive" method="POST")
            %input.square(type="submit" value="Set active")
        %td
          %form.nomargin(action="/home/edit_item/#{item.id}" method="GET")
            %input.square(type="submit" value="Edit")
-else
  %h3 No items


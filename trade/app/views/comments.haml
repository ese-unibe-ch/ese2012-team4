-#%h2
  :escaped
    #{@item.name}

%br
- for comment in @item.head_comments
  %td
    %p comment.text

-# MW: the things below are copied from item_page.haml
%br
.textbox.name
  Available Quantity:
.textbox.value
  #{@item.quantity}
%br
.textbox.name
  Owner:
.textbox.value
  %a(href="/users/#{@item.owner.id}" )
    :escaped
      #{@item.owner.name}
%hr.separator.invisible
-if @item.owner.name == @session_user.name
  -if @item.editable?
    %p
      %form.nomargin(action="/home/edit_item/#{@item.id}" method="GET")
        %input.square.rightalign(type="submit" value="Edit")
-else
  -if @item.active
    %td.buyform
      %form.nomargin(action="/buy/#{@item.id}/#{@item.timestamp}" method="POST")
        %input.tiny.rightalign(type = "text" name = "quantity" value = "1")
        %input.square.rightalign(type="submit" value="Buy")

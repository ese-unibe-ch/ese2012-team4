%h2
  :escaped
    #{@user.name}
.textbox.name
  -# MW: Formatierung geht kaputt beim Einf√ºgen von ":escaped"
  :escaped
    #{@user.name}'s interests:
.textbox.value
  %p
    -if !@user.description.empty?
      -@user.description.each do |line|
        :escaped
          #{line}
        %br
%br
%hr.separator

.textbox.name
  %p
    :escaped
      #{@user.name}'s items on sale:
%br
- content_for :name do
  %p
    :escaped
      #{@user.name}'s Active_items
-unless @user.list_items.empty?
  -stored = @user.list_items
  %table.itemtable.right
    %thead
      %tr
        %td
          %p.table_header Name
        %td
          %p.table_header Price
        %td
          %p.table_header Qty
        -unless @user.id == session[:id]
          %td
            %p.table_header Buy
    - for item in @user.list_items
      %tr
        %td.nopadding
          %a.wholly_clickable(href="/item/#{item.id}" )
            :escaped
              #{item.name}
        %td
          %p
          :escaped
            #{item.price}
        %td
          %p #{item.quantity}
        -unless @user.id == session[:id]
          %td.buyform
            %form.nomargin(action="/buy/#{item.id}/#{(stored.select {|tobuy| tobuy.id==item.id})[0].timestamp}" method="POST")
              %input.tiny(type = "text" name = "quantity" value = "1")
              %input.square.rightalign(type="submit" value="Buy")
-else
  .textbox.value
    %p No Items
-unless @user.name != @session_user.name
  %hr.separator.invisible
    %form.nomargin(action="/profile" method="GET")
      %input.square.rightalign(type="submit" value="Edit your profile")

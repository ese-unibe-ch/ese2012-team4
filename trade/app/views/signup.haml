%h2 Signup
%br

%form(action="/signup" method="POST" enctype="multipart/form-data")
  %label.textbox.name new username:
  %input.textbox.value(type="text" name="username" value= name)
  %hr.separator
  %label.textbox.name E-Mail:
  %input.textbox.value(type="text" name="e_mail" value= e_mail)
  %hr.separator
  %label.textbox.name
    %p Display image
  %input.textbox.value(type='file' name='image_file' accept="image/*")
  %label.textbox.name List your interests (optional):
  %textarea.textbox.value(type="text" name = "description")
    -if !description.empty?
      -description.each do |line|
        :escaped
          #{line}
  %hr.separator
  %label.textbox.name Password:
  %input.textbox.value(type="password" name="password1" value="")
  %hr.separator.invisible
  %label.textbox.name Retype password:
  %input.textbox.value(type="password" name="password2" value="")
  %hr.separator
  %input.square.rightalign(type="submit" value="Sign up!")
  .textbox.name.wide
    %p Make sure to choose a strong password.
    %p Strong passwords include letters and numbers and are longer than 4 digits.
%h2
  Home
.lineContainer
  .textbox.name
    %p Currently logged in User:
  .textbox.value
    %p
      :escaped
        #{@session_user.name}
.lineContainer
  .textbox.name
    %p Working for:
  .textbox.value
    %p
      :escaped
        #{@session_user.working_for.name}
.lineContainer
  .textbox.name
    %p Your Credits:
  .textbox.value
    %p #{@session_user.credits}
.lineContainer
  .textbox.name
    %p Active items:
  .textbox.value
    %p #{@session_user.list_items.size}
.lineContainer
  .textbox.name
    %p Inactive items
  .textbox.value
    %p #{@session_user.list_items_inactive.size}
%hr.separator

%html
  %head
    %title Trading System
    %link(rel="stylesheet" type="text/css" href="/css/style.css")
  %body
    #content
      %table.main
        %tr
          %td.header(colspan="2")
            %h1= "Trading System: #{page_name}"
        %tr
          -if not session[:username].nil?
            %td.navigation
              %h2 Menu
              %a.nav(href="/home") - Home
              %a.nav(href="/home/active") - My Active Items
              %a.nav(href="/home/inactive") - My Inactive Items
              %a.nav(href="/home/new") - Create Item
              %br
              %a.nav(href="/users") - All Users
              %a.nav(href="/items") - All Items
              %br
              %a.nav(href="/users/#{User.get_user(session[:username]).name}") - Your Profile
              %a.nav(href="/logout") - Logout
          -else
            %td.navigation
              %h2 not logged in!
          -if error != nil
            %td.error
              #error_msg
                #{error}
              =yield
          -else
            %td
              =yield
          %tr
            %td(colspan="2")
              %p Built during ESE 2012